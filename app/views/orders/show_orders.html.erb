<h2 class="mt-3">Orders</h2>

<% @orders.each do |order| %> 
  <% order.order_items.each do |item| %>
    <div class="card mt-3" style="max-width: 100%; height: 100px position:absolute ">
      <div class="row g-0">
        <div class="col-md-4 d-flex justify-content-center">
          <%= image_tag (item.product.picture), style: 'height:240px;width:auto;' %>
        </div>
        <div class="col-md-8 mt-3">
          <div class="card/-body">
            <h4 class="card-title"><%= item.product.name %></h4> 
            <br>
            <h4 class="card-text"><%= item.product.price %></h4> 
            <div>
              <br>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<br>
<div class="cart-btn-div">
  <%= link_to "Continue Shopping", root_path, class:"btn btn-info" %>
</div> 