<h2 class="mt-3">Payment</h2>


<div class="container form-container">
  <form>
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text-area" class="form-control" id="address" required>
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Mobile No.</label>
        <input type="tel" class="form-control" id="phone" pattern="[0-9]{10}" maxlength="10" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="pin">Pincode</label>
        <input type="text" class="form-control" id="pin" pattern="[0-9]{10}" required>
    </div>
    <br>

    <h6>Payment Method</h6>
    
    <div class="form-check">
      <input class="form-check-input" type="radio" name="paymentoption" id="paymentoption1">
      <label class="form-check-label" for="paymentoption1">
        Google Pay
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="paymentoption" id="paymentoption2" >
      <label class="form-check-label" for="paymentoption2">
        Phone Pe
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="paymentoption" id="paymentoption3" >
      <label class="form-check-label" for="paymentoption3">
        UPI
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="paymentoption" id="paymentoption4" >
      <label class="form-check-label" for="paymentoption4">
        Net Banking
      </label>
    </div>
    <br>

    <h6>Required Amount:&emsp;&emsp;&emsp;&emsp; â‚¹ <%= @cart.sub_total %></h6>
    <br>
    <div class="mb-3">
        <label for="amount" class="form-label">Amount to Pay</label>
        <input type="number" class="form-control" id="amount" pattern="[0-9]" required>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-success">Pay Amount</button>
    </div>
  </form>
  
</div>