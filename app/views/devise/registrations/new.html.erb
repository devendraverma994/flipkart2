<div class="container form-container ">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name,class:"form-control", autofocus: true %>
    </div>
    <br>
    <div class="field">
      <%= f.label :gender %><br />
      <%= f.radio_button :gender, 'Male' %> Male
      <%= f.radio_button :gender, 'Female' %> Female
      <%= f.radio_button :gender, 'Other' %> Other
    </div>
    <br>
    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_field :address,class:"form-control", autofocus: true %>
    </div>
    <br>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email,class:"form-control", autofocus: true, autocomplete: "email" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :role %><br />
      <%= f.select :roles, ['buyer', 'seller'] %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password,class:"form-control", autocomplete: "new-password" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation,class:"form-control", autocomplete: "new-password" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up",class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>